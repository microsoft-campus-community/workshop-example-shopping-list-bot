{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            
            "$data": "${items}",
            "id": "${itemName}",
            "type": "Input.Toggle",
            "title": "${if(unit.value, unit.value, '')} ${if(unit.unitName, unit.unitName, '')}  ${itemName}"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Save",
            "url": "${viewUrl}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}